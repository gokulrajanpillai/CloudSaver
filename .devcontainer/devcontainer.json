// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "CloudSaver DevContainer",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "docker.io/gokulrajanpillai/cloudsaver-pybox:202507-002",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"postCreateCommand": "pre-commit install && pre-commit autoupdate",
	"mounts": [
		"source=${localWorkspaceFolder}/credentials.json,target=/workspace/credentials.json,type=bind"
	]
}

