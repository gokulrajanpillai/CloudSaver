// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "CloudSaver DevContainer",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "docker.io/gokulrajanpillai/cloudsaver-pybox:202507-003",

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance"
			]
		}
	},
	"postCreateCommand": "./.devcontainer/post-create.sh",
	"mounts": [
		"source=${localWorkspaceFolder}/credentials.json,target=/workspace/credentials.json,type=bind",
		"source=${localWorkspaceFolder}/.gitconfig,target=/root/.gitconfig,type=bind,consistency=cached"
	]
}
